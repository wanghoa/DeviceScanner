<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.subscribe.SubscribeActivity">

        <!--        <ScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:scrollbars="none">-->

        <LinearLayout
            android:id="@+id/main_searching_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_searching"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closedIv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/icon_closed" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_iv"
                android:layout_width="166dp"
                android:layout_height="166dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp40"
                android:src="@drawable/gif_wifi" />

            <TextView
                android:id="@+id/tvScanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="@dimen/dp23"
                android:gravity="center_horizontal"
                android:text="Easily find and detect hidden wireless devices around you"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subscribeMonth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_marginHorizontal="@dimen/dp50"
                android:layout_marginTop="@dimen/dp23"
                android:background="@drawable/bd_subscribe_goods"
                android:paddingHorizontal="@dimen/dp15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 month"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9.99 $"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subscribeJune"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:layout_marginHorizontal="@dimen/dp50"
                android:layout_marginTop="@dimen/dp23"
                android:background="@drawable/bd_subscribe_goods"
                >

                <TextView
                    android:id="@+id/six_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp14"
                    android:text="6 months"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginTop="5dp"

                    android:text="42% off"
                    android:textColor="@color/color_ff2da6d2"
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/six_months" />

                <TextView
                    android:id="@+id/most_popular"
                    android:layout_width="@dimen/dp98"
                    android:layout_height="@dimen/dp20"
                    android:background="@drawable/bg_subscribe_sixmonth"
                    android:gravity="center"
                    android:text="Most popular"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp7"
                    android:text="24.99 $"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp23"
                android:src="@mipmap/icon_subscribe_one"
                android:visibility="gone" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/iocn_subscribe_june"
                android:visibility="gone" />


            <RelativeLayout
                android:id="@+id/btn_subcribe"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/dp50"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/bg_wifi_scan_network">

                <TextView
                    style="@style/guide_blue_button_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscribe" />

                <ImageView
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp15"
                android:gravity="center_horizontal"
                android:text="@string/subscribe_description"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp25">

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:text="Privacy policy"
                    android:textColor="@color/color_2DA6D2"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginLeft="@dimen/dp15" />

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:text="Terms of service"
                    android:textColor="@color/color_2DA6D2"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginLeft="@dimen/dp15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:text="Resume purchase"
                    android:textColor="@color/color_2DA6D2"
                    android:textSize="10sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginLeft="@dimen/dp15" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
        <!--        </ScrollView>-->
    </LinearLayout>
</layout>