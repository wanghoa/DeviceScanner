<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".ui.subscribe.SubscribeActivityNew">

        <LinearLayout
            android:id="@+id/main_searching_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_main_searching"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closedIv"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/icon_closed" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gif_iv"
                android:layout_width="166dp"
                android:layout_height="166dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp40"
                android:src="@drawable/gif_wifi" />

            <TextView
                android:id="@+id/tvScanning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="46dp"
                android:layout_marginTop="@dimen/dp23"
                android:gravity="center_horizontal"
                android:text="@string/subscirbe_des_new"
                android:textColor="@color/color_E8ffa7"
                android:textSize="23sp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp11"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp127">
                <TextView
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp52"
                    android:text="@string/unlimited"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_marginTop="@dimen/dp11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp52"
                    android:text="@string/scan"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_marginTop="@dimen/dp11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp52"
                    android:text="@string/deep"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <TextView
                    android:layout_marginTop="@dimen/dp11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp52"
                    android:text="@string/fully"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subscribeMonth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp47"
                android:layout_height="@dimen/d152"
                android:background="@drawable/bd_subscribe_goods"
                android:paddingHorizontal="@dimen/dp15">
                <TextView
                    android:id="@+id/top"                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/dp16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/top"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                  />

                <TextView
                    android:id="@+id/bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sevent_pay"
                    android:textColor="@color/color_E8ffa7"
                    android:textSize="17sp"
                    android:layout_marginTop="@dimen/dp9"
                    app:layout_constraintTop_toBottomOf="@+id/middle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/two_week"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginBottom="@dimen/dp19"
                    android:layout_marginTop="@dimen/dp18"
                    app:layout_constraintTop_toBottomOf="@+id/bottom"                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/dp40"
                    android:id="@+id/subscribeWeek"
                    android:layout_marginHorizontal="@dimen/dp8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp168"
                    android:background="@drawable/bd_subscribe_goods"
                    android:paddingHorizontal="@dimen/dp15">

                    <TextView
                        android:id="@+id/top_middle"                    android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/one"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/dp24"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/middle_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/week"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/top_middle"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        />

                    <TextView
                        android:id="@+id/bottom_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/two_pay"
                        android:textColor="@color/color_E8ffa7"
                        android:textSize="17sp"
                        android:layout_marginTop="@dimen/dp9"
                        app:layout_constraintTop_toBottomOf="@+id/middle_middle"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/three_week"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:layout_marginBottom="@dimen/dp19"
                        android:layout_marginTop="@dimen/dp18"
                        app:layout_constraintTop_toBottomOf="@+id/bottom_middle"                    app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/subscribeJune"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp47"

                android:layout_height="@dimen/d152"
                android:background="@drawable/bd_subscribe_goods"
                >

                <TextView
                    android:id="@+id/rig_top"                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/three"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/dp16"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/rig_middle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/months"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@+id/rig_top"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    />

                <TextView
                    android:id="@+id/rig_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nineth_pay"
                    android:textColor="@color/color_E8ffa7"
                    android:textSize="17sp"
                    android:layout_marginTop="@dimen/dp9"
                    app:layout_constraintTop_toBottomOf="@+id/rig_middle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onepointsix_week"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:layout_marginBottom="@dimen/dp19"
                    android:layout_marginTop="@dimen/dp18"
                    app:layout_constraintTop_toBottomOf="@+id/rig_bottom"                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/btn_subcribe"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@drawable/bg_wifi_scan_network">

                <TextView
                    style="@style/guide_blue_button_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subscribe" />

                <ImageView
                    android:layout_width="@dimen/dp18"
                    android:layout_height="@dimen/dp18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp20" />
            </RelativeLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp80"
                android:layout_marginTop="@dimen/dp25">

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/color_2DA6D2"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center_horizontal"
                    android:text="@string/terms_service"
                    android:textColor="@color/color_2DA6D2"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/restore_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/restore"
                    android:textColor="@color/color_2DA6D2"
                    android:textSize="10sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
        </LinearLayout>

</layout>